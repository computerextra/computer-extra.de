---
import "../globals.css";

interface Props {
  title?: string;
  frontmatter?: { title?: string };
}

const { title, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>Computer Extra GmbH | {title ? title : frontmatter?.title}</title>
  </head>
  <body>
    <nav></nav>
    <main class="container mx-auto">
      <h1>{title ? title : frontmatter?.title}</h1>
      <slot />
    </main>
    <footer></footer>
  </body>
</html>
